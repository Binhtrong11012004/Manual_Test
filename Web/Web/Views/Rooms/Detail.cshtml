                                            <span>@Model.ViTri</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <img src="/public/external/line3i164-htp.svg" alt="Line3I164" class="desktop35-line3" />
                        <div class="desktop35-frame103">
                            <span class="desktop35-text18 PlusJakartaSans20px:SemiBold">
                                <span>Details</span>
                            </span>
                            <div class="desktop35-frame96">
                                <div class="desktop35-frame911">
                                    @foreach (var item in Model.LoaiPhong.TienNghis)
                                    {
                                        if (item.MaTienNghi % 2 == 1)
                                        {
                                            <span class="desktop35-text20 PlusJakartaSans16px:Regular">
                                                <span>@item.TenTienNghi</span>
                                            </span>
                                        }
                                    }
                                </div>
                                <div class="desktop35-frame92">
                                    @foreach (var item in Model.LoaiPhong.TienNghis)
                                    {
                                        if (item.MaTienNghi % 2 == 0)
                                        {
                                            <span class="desktop35-text20 PlusJakartaSans16px:Regular">
                                                <span>@item.TenTienNghi</span>
                                            </span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="desktop35-frame54">
                        <form action="/booking/add" method="post">
                            <input type="hidden" name="khachsan" value="@Model.MaKhachSan" />
                            <input type="hidden" name="maphong" value="@Model.MaPhong" />
                            <input type="hidden" name="url" value="" />
                            <button class="desktop35-button" style="cursor:pointer;">
                                <div class="desktop35-frame11">
                                    <span class="desktop35-text48 PlusJakartaSans16px:SemiBold">
                                        <span>Book now</span>
                                    </span>
                                </div>
                            </button>
                        </form>

                        <form action="/booking/add" method="post">
                            <input type="hidden" name="khachsan" value="@Model.MaKhachSan" />
                            <input type="hidden" name="maphong" value="@Model.MaPhong" />
                            <input type="hidden" name="url" value="/rooms/detail/@Model.MaPhong" />
                            <button class="desktop35-button1" style="cursor:pointer;">
                                <div class="desktop35-frame111">
                                    <span class="desktop35-text50 PlusJakartaSans16px:SemiBold">
                                        <span>Add to cart</span>
                                    </span>
                                </div>
                                <img src="/public/external/teenyiconsarrowupsolidi164-9xvi.svg" alt="teenyiconsarrowupsolidI164" class="desktop35-teenyiconsarrowupsolid" />
